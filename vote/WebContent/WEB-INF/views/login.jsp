<!DOCTYPE html>
<html>

<head lang="en">
    <meta charset="UTF-8">
    <title></title>
  <style>
*{
	margin: 0;
	padding: 0;
	}
	
.reg{
	background:#33ff00;
	width:600px;	
	margin-left: auto;
	margin-right: auto;
	margin-top: 40px;
	}
.reg h1{
	margin-bottom: 20px;
	}
.reg td{
	padding: 5px;
	}
.inputs{
	padding-left: 16px;
	padding-right: 16px;
	height:30px;
	line-height: 30px;
	border:1px #ccc solid;
	}
.reg_btn{
	border:1px #E12A2D solid;
	background: #E91F22;
	color: #fff;
	width: 120px;
	height:36px;
	cursor:pointer;   /* 光标手势 */
	}
</style>
</head>

<body>

<div  class="reg">
   	<h1>登录：</h1>
    <form action="admin/denglu"  method="post"  name="register" id="register">
        <table>
            <tr>
                <td>用户名：</td>
                <td>
                	<input type="text"  class="inputs" name="uname" id="uname">
                	<span>用户名由4-12位字母、数字、下划线组成</span>
                </td>
            </tr>
             <tr>
                <td>密码：</td>
                <td>
                	<input type="password" class="inputs"  name="pwd" id="pwd">
                	<span>密码由长度为6-20的字符组成</span>
                </td>
            </tr>
              
            <tr>
                <td>&nbsp;</td>
                <td>
                	<input type="submit" value="登录" class="reg_btn"  id="denglu">
                </td>
            </tr>
        </table>
    </form>
</div>

<script>
	var  myform = document.forms["register"];
	var  btn = myform.elements["denglu"];  //利用表单方式找标签
	var  uname = myform.elements["uname"];
	var  pwd = myform.elements["pwd"];
	
	var  zz_uname =  /^\w{4,12}$/i;  //用户名由4-12位字母、数字、下划线组成。不能有/g
	var  zz_pwd = /^\S{6,20}$/i;  //密码由长度为6-20的字符组成.不能有空格
	
	btn.onclick = function(){
	   //alert(1);
	   //表单验证，其实就是查错。 
	   if( zz_uname.test(uname.value)==false ){
		   //用户名检测
		   alert("用户名错误，请重新输入！");
		   uname.focus();
		   	return  false ;	  // 返回false阻止表单提交。
		}
		
		if( zz_pwd.test(pwd.value)==false ){
		    alert("密码错误，请重新输入！");
		    pwd.focus();
			return  false ;	  // 返回false阻止表单提交。
		}
		
	}
 </script>
</body>
</html>